public boolean isAnagram(String s1, String s2) {
    Map<String, Integer> map1 = new Map<String, Integer>();
    if(s1 == null || s2 == null || s1.length() != s.length() ){
        return false;
    }
    else{
        for(Integer i =0 ; i< s1.length(); i++){
            if(!map1.containsKey(s1.substring(i,i+1))){
                map1.put(s1.substring(i,i+1), 0);
            }
            map1.put(s1.substring(i,i+1), map1.get(s1.substring(i,i+1)) + 1);
            map1.put(s2.substring(i,i+1), map1.get(s2.substring(i,i+1)) - 1);
        }
    }

    for(Integer i:map1.values()){
        if(i != 0) 
        return false;
    }
    return true;
}
